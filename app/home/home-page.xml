<Page class="page"
    navigatingTo="onNavigatingTo"
    loaded="onPageLoaded"  
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Home"></Label>
        <Button text="Settings" id="gotoSettings" />
    </ActionBar>

    <StackLayout>
        <ListView height="100%" items="{{items}}" id="mainList">
            <ListView.itemTemplate>
                <StackLayout>
                    <Label text="{{fact}}" textWrap="true"
                            class="fact" />
                </StackLayout>
            </ListView.itemTemplate>
        </ListView>
    </StackLayout>
</Page>
